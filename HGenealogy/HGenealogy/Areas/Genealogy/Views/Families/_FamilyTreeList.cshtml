@model IEnumerable<HGenealogy.Entities.Family>

@{
    ViewBag.Title = "Details";
    var addressDescr = "";
    var routeDescr = "";
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().GenerationNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().FName)
        </th>
        <th>
            住址
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GenerationNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FName)
                </td>

                <td>
                    @{
                        addressDescr = "";
                        routeDescr = "";
                    }

                    @if (item.AddressLatitude != null)
                    {
                        routeDescr = item.AddressLatitude.ToString() + ", " + item.AddressLongitude.ToString();
                    }
                    @if (item.Address != null && item.Address != "")
                    {
                        addressDescr = item.Address;
                    }

                    @addressDescr @routeDescr

                </td>



        </tr>

    }
</table>