@model HGenealogy.Models.News.NewsModel
@{

    string tilte = ViewBag.Title;
}




<div class="form-horizontal ">
    <h1>@tilte</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>
        @Html.ActionLink("返回新聞瀏灠", "Index")
    </div>
    <div class=" panel panel-default">
        <div class="form-group">
            <div class="col-md-2 text-right">
                <strong>@Html.DisplayNameFor(model => model.Title)</strong>
            </div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right">
                <strong>@Html.DisplayNameFor(model => model.StartDate)</strong>
            </div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right">
                <strong>@Html.DisplayNameFor(model => model.EndDate)</strong>
            </div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right">
                <strong>@Html.DisplayNameFor(model => model.Content)</strong>
            </div>
            <div class="col-md-10">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</div>

