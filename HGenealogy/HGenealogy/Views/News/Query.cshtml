@using HGenealogy.Models.News;
@model NewsQueryModel

@using (Html.BeginForm("GetNews", "News"))
{
    <div class="page">
        <div class="page-title">
            <h1>新聞查詢</h1>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2>請輸入查詢條件 </h2>
                    <br />
                </div>
            </div>
            <div class="row ">
                <div class="col-md-8 col-md-offset-2">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row form-group">
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "標題" } })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <span class="help-block text-muted small-font"> 開始年</span>
                                    @Html.EditorFor(model => model.StartDateYY, new { htmlAttributes = new { @class = "form-control", placeholder = "YYYY" } })
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <span class="help-block text-muted small-font"> 開始月</span>
                                    @Html.EditorFor(model => model.StartDateMM, new { htmlAttributes = new { @class = "form-control", placeholder = "MM" } })
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <span class="help-block text-muted small-font"> 開始日</span>
                                    @Html.EditorFor(model => model.StartDateDD, new { htmlAttributes = new { @class = "form-control", placeholder = "DD" } })
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                </div>
                            </div>
                            <div class="row form-group ">
                                <div class="col-md-6 ">
                                    <input type="submit" class="btn btn-danger btn-block" value="取消" />
                                </div>
                                <div class="col-md-6">
                                    <input type="submit" class="btn btn-warning btn-block" value="查詢" />
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- CREDIT CARD DIV END -->
                </div>
            </div>
        </div>

    </div>
}
