<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 客家族譜平台</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>

    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="logo1" href="/"><img src="~/Content/Images/logo.png" alt="hg" height="60" width="295"></a>

                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        族譜瀏覽<span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            @Html.ActionLink("族譜資訊", "Index", "PedigreeMeta")
                        </li>
                        <li><a href="#">世系圖表</a></li>
                        <li><a href="#">時間地圖</a></li>
                        <li><a href="#">家族分佈</a></li>
                    </ul>
                </div>

                <div class="btn-group">
                    <button type="button" class="btn btn-success" aria-expanded="false">                       
                        @Html.ActionLink("族譜查詢", "Query", "PedigreeMeta")
                    </button> 
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-warning" aria-expanded="false">
                        族譜資源
                    </button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary" aria-expanded="false">
                        族譜管理
                    </button>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("首頁", "Index", "Home")</li>
                </ul>*@

                @*@Html.MvcSiteMap().Menu("BootstrapMenuHelperModel", false)*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="row"></div>

    <div class="body-content">
        @RenderBody()
        <hr />
        <div class="container">
            <footer>
                <p>&copy; @DateTime.Now.Year - 客家族譜平台</p>
            </footer>
        </div>
    </div>


</body>
</html>
