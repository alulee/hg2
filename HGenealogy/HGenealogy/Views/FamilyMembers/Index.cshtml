@using HGenealogy.Models.FamilyMember
@model IEnumerable<HGenealogy.Models.FamilyMember.FamilyMemberViewModel>

@{
    ViewBag.Title = "Index";
    string currentPedigreeName = ViewBag.currentPedigreeName;
    int currentPedigreeId = ViewBag.currentPedigreeId;
 
}
 
@{ ViewData["SelectedPedigreeSecondMenu"] = "MemberList";}

<div class="pedigreecontainer container-fluid">
   
    <div class="container-fluid pedigree-sec-menu-wrap">

        <div class="container-fluid pedigree-sec-menu">
            @*@Html.Partial("_PedigreeSecondMenu", @ViewData)*@
            @Html.Action("PedigreeSecondMenu", "PedigreeMeta", new { id = currentPedigreeId })
        </div>

        <hr />
    </div>
  

    <hr />

    <h4>通訊錄</h4>

    <div class="newfm float-right">
        <p>
            @Html.ActionLink("建立新會員", "Create")
        </p>
    </div>
    <div class="clearfix"></div>

    @foreach (var item in Model)
    {
        <div class="container-fluid memberbox">
            <div class="member_img">
                <img src="/Content/Images/indis.gif" />
            </div>
            <div class="member_intro">
                <div>
                    <h4><strong>@Html.DisplayFor(model => item.GivenName)</strong></h4>
                    <div class="member_intro_content">

                        <p>個人摘要：@Html.DisplayFor(model => item.Description)</p>

                        <p>現居地址：@Html.DisplayFor(model => item.CurrentAddress.FullAdress)</p>
                    </div>
                </div>
            </div>
            <div class="editor-btn">
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("詳細資料", "Meta", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </div>
        </div>
    }

</div>