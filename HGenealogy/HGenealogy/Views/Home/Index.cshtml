<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/Images/home/carousel1.jpg">
            <div class="carousel-caption">
                <h3>No.1</h3>
                <p>第一張照片，可放描述在這裡</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/home/carousel2.jpg">
            <div class="carousel-caption">
                <h3>No.2</h3>
                <p>第二張照片，可放描述在這裡</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/home/carousel3.jpg">
            <div class="carousel-caption">
                <h3>No.3</h3>
                <p>第三張照片，可放描述在這裡</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/home/carousel4.jpg">
            <div class="carousel-caption">
                <h3>No.4</h3>
                <p>第四張照片，可放描述在這裡</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />



<div class="row">
    <div class="col-md-9">
        @Html.Partial("_News", Model.newsList)
    </div>

    <div class="col-md-3">
        @Html.Partial("_PedigreeMetaNavigator", Model.pedigreeMetaList)
    </div>
</div>

