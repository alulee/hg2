@using HGenealogy.Models.Home;
@model IEnumerable<PedigreeMetaModel>


<div class="panel panel-warning ">
    <div class="panel-heading text-center">
        <h4>最新族譜</h4>
    </div>
    <div class="panel-body">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-4">
                    <img src="@Url.Content(item.Image)" style="width:60px" />
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ActionLink(item.Title, "Index", "PedigreeInfo", new { pedigreeID =item.Id},null)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12" style="color:#879292">@Html.DisplayFor(model => item.CreatedOnUtc )</div>
                    </div>
                </div>
            </div>
            <hr style="border-bottom-color:#f5f5f0" />
        }

    </div>
</div>
